doctype html
html
  head
    title=title
    link(rel='stylesheet', href='build/auth.css')
  body
    .auth
      if message
        .message
          .message__text #{message}
      .auth__header
        .auth__logo__name Gocodewith.me
      form(class='auth__form', action='/signin', method='POST')
        input(type='text', name='username', class='auth__form__input', placeholder='Username', required)
        input(type='password',name='password', class='auth__form__input', placeholder='Password', required)
        a(href='/')
        button(class='auth__form__button', type='submit') Sign in
        a(href='/auth/github') Sign in via GitHub
        button(class='auth__form__button', type='submit') Sign in via GitHub
