doctype html
html
  head
    link(rel='stylesheet', href='../build/dashboard.css')
  body
    .dashboard
      if message != ''
        .message
          .message__text= message
      .dashboard__form
        form(class='dashboard__form__create', action='/room/create', method='POST')
          p(class='dashboard__text') Create room:
          input(type='text', class='dashboard__input', name='name' placeholder='Room name', required)
          button(class='dashboard__button', type='submit') Create
        form(class='dashboard__form__connect', action='/room', method='POST')
          p(class='dashboard__text') Connect to room:
          input(type='text', class='dashboard__input', name='name', placeholder='Room name', required)
          button(class='dashboard__button', type='submit') Connect
        p(class='dashboard__text') Open recent:
          ul(class='dashboard__room__list')
            li(class='dashboard__room__item')
              a(class='dashboard__link', href='/room/jquery') jquery
            li(class='dashboard__room__item')
              a(class='dashboard__link', href='/room/backbone') backbone
